[user]
	email = dvi@outsight.tech
	name = Damien Vielpeau
[branch]
	autosetuprebase = always
[cola]
	fontdiff = Ubuntu Mono,11,-1,5,50,0,0,0,0,0
	boldheaders = true
	spellcheck = false
	expandtab = false
	tabwidth = 8
	textwidth = 120
	theme = flat-dark-grey
	icontheme = dark
[gui]
	editor = vim
	diffcontext = 8
[push]
	default = current
[alias]
	fixup = "!f() { git commit -m\"fixup! $(git log -1 --pretty=%s $1)\"; }; f"
	co = checkout
	br = branch
	ci = commit
	st = status
	sw = switch
[format]
	pretty = oneline
[log]
	abbrevCommit = true
	decorate = auto
[pull]
	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	singleKey = true
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[core]
	excludesfile = ~/.gitignore_global
[rerere]
	enabled = true
[remote "origin"]
	prune = true
